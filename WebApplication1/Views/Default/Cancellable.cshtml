@model IAsyncEnumerable<IAsyncEnumerable<int?>>

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <style>
        html {
            font-size: 50px;
        }

        body {
            margin: 0;
        }

        table {
            border-collapse: collapse;
            text-align: center;
        }

        tr:nth-child(even) td:not(:first-child) {
            background-color: rgba(0, 0, 0, 0.2);
        }

        td {
            padding: 10px 20px;
            background-color: white;
        }

            tr:first-child td,
            td:first-child {
                filter: invert(1);
                position: sticky;
            }

        tr:first-child td {
            top: 0;
        }

        tr::not(:first-child) td {
            left: 0;
        }
    </style>
</head>
<body>
    <table>
        @await foreach (var row in this.Model)
        {
            <tr>
                @await foreach (var cell in row)
                {
                    <td>@cell</td>
                }
            </tr>
        }
    </table>
</body>
</html>
